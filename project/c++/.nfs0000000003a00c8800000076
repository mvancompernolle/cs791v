#ifndef BBMC_H
#define BBMC_H

#include <boost/dynamic_bitset.hpp>
#include <vector>
#include "Vertex.h"
#include "MCQ.h"

class BBMC : public MCQ{
public:
	BBMC(int n, std::vector<std::vector<int> > A, std::vector<int> degree, int style);
	~BBMC();
	void init(int n);
	int applyColor();
	void removeColor(int i);

private:
	boost::dynamic_bitset<> N();
	boost::dynamic_bitset<> invN();
	std::vector<Vertex> V;
};

#endif