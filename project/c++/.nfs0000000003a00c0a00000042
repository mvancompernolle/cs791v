#ifndef MCSA_H
#define MCSA_H

#include <vector>
#include <sys/time.h>
#include <time.h>
#include "Vertex.h"
#include "MCQ.h"

class MCSA : public MCQ{
public:
	MCSA(int n, std::vector<std::vector<int> > A, std::vector<int> degree, int style);
	virtual ~MCSA();
	virtual void search();
	virtual void expand(std::vector<int> C, std::vector<int> P);

private:
	virtual void orderVertices(std::vector<int>& verts);
	void numberSort(std::vector<int> C, std::vector<int> colOrd, std::vector<int>& P, int color[]);
	void minWidthOrder(std::vector<Vertex>& V);
	bool conflicts(int v, std::vector<int> cClass);
	std::vector<std::vector<int> > colorClass;
};

#endif